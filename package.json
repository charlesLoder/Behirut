{
  "name": "behirut",
  "version": "1.0.0",
  "description": "a browser exrtension for making Hebrew text more legible on the web",
  "scripts": {
    "minifyMain": "uglifyjs -c -m --output src/main.min.js -- src/main.js",
    "minifyPopup": "uglifyjs -c -m --output src/popup.min.js -- src/popup.js",
    "minifyBackground": "uglifyjs -c -m --output src/background.min.js -- src/background.js",
    "minifyCustomFonts": "uglifyjs -c -m --output src/custom_fonts.min.js -- src/custom_fonts.js",
    "minifyShared": "uglifyjs -c -m --output src/shared.min.js -- src/shared.js",
    "minifyAll": "tsc && run-p minifyMain minifyPopup minifyBackground minifyCustomFonts minifyShared",
    "firefox": "node scripts/firefox",
    "chrome": "node scripts/chrome",
    "buildChrome": "run-s minifyAll chrome",
    "esbuild": "node esbuild.config.js",
    "testBuild": "tsc && run-s esbuild chrome && rm -rf src/*.js",
    "buildFirefox": "run-s minifyAll firefox",
    "build": "run-s buildChrome buildFirefox && rm -rf src/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlesLoder/Behirut.git"
  },
  "author": "charlesLoder",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/charlesLoder/Behirut/issues"
  },
  "homepage": "https://github.com/charlesLoder/Behirut#readme",
  "dependencies": {
    "@types/chrome": "0.0.104",
    "@types/firefox-webext-browser": "^70.0.1",
    "@types/fs-extra": "^8.1.0",
    "@types/materialize-css": "^1.0.7",
    "@types/node": "^13.13.4",
    "cross-zip": "^3.0.0",
    "fs-extra": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "replace-in-file": "^6.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.14.54",
    "esbuild-node-externals": "^1.4.1",
    "typescript": "^4.7.4",
    "uglify-js": "^3.17.0"
  }
}
